<Window x:Class="mediakit1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:WPFMediaKit="clr-namespace:WPFMediaKit.DirectShow.Controls;assembly=WPFMediaKit"
        Title="MainWindow" Height="326.313" Width="338" Activated="Window_Activated_1">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="282*"/>
            <RowDefinition Height="37*"/>
        </Grid.RowDefinitions>
        <WPFMediaKit:VideoCaptureElement x:Name="videoCapElement"
                                 DesiredPixelWidth="320"
                                 DesiredPixelHeight="240"
                                         Stretch="None"
                                 FPS="30" HorizontalAlignment="Left" VerticalAlignment="Top" Width="320" Height="240" />
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="362*"/>
                <ColumnDefinition Width="155*"/>
            </Grid.ColumnDefinitions>
            <ComboBox x:Name="videoCapDevices"
     ItemsSource="{Binding Source={x:Static WPFMediaKit:MultimediaUtil.VideoInputDevices}}"
     DisplayMemberPath="Name" SelectionChanged="videoCapDevices_SelectionChanged" />
            <Button Grid.Column="1" Click="Button_Click_1" Content="save snapshot" Grid.ColumnSpan="2" />
        </Grid>
    </Grid>
</Window>